<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport"
          content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>推荐有奖详情</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/2_0/aui_2_0.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/2_0/rem.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/fonts/duola_iconfont2.css"/>
    <script type="text/javascript" src="../../script/vue/vue.min.js"></script>
    <style>

        body {
            width: 100%;
            height: 100%;
            min-height: 50rem;
            background: #F2F2F2;
            font-family: SourceHanSansCN-Normal;
        }

        #app {
            width: 100%;
            height: auto;
        }

        .ticket {
            width: 100%;
            border-left: 1px dotted #F2F2F2;
            height: 4.5rem;
            text-align: center;
        }

        .ticket::before {
            content: "";
            position: absolute;
            top: -5px;
            left: -4px;
            border: 5px solid #F2F2F2;
            border-radius: 50%;
        }

        .ticket::after {
            content: "";
            position: absolute;
            bottom: -5px;
            left: -4px;
            border: 5px solid #F2F2F2;
            border-radius: 50%;
        }

        .ticket .ticket-in {
            display: inline-block;
            font-family: SourceHanSansCN-Normal;
            font-size: 0.5rem;
            color: #FFFFFF;
            width: auto;
            border: 1px solid #ffffff;
            border-radius: 0.4rem;
            padding: 2px 4px;
            margin: 1.5rem 0;
            line-height: 1rem;
        }

        .aui-row {
            padding: 1rem;
        }

        .aui-row .aui-content {
            background-image: linear-gradient(134deg, #FF6100 0%, #FF9A00 100%);
            background-image: -webkit-linear-gradient(134deg, #FF6100 0%, #FF9A00 100%);
            height: 4.5rem;
            border-radius: 0.2rem;
            margin-bottom: 1rem;
            width: 100%;
            box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
        }

        .aui-row .aui-content.expire {
            background-image: linear-gradient(134deg, #E2E2E2 0%, #D8D8D8 100%);
        }

        .list-item-media {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .list-item .list-item-inner {
            flex: 1
        }

        .list-item-media span {
            padding: 1rem 0;
            font-family: SourceHanSansCN-Normal;
            font-weight: 500;
            font-size: 1.5rem;
            color: #FFFFFF;
        }

        .list-item-inner {
            padding: 1rem 0;
            font-size: 10px;
            color: #FFFFFF;
            letter-spacing: -0.41px;
            line-height: 0.8rem;
        }
        [v-cloak] {
            display: none;
        }
    </style>
</head>
<body>
<section id="app" v-cloak>
    <div class="aui-row">
        <div class="aui-content" v-for="couopn in couopns" :class="{'expire': couopn.expired === 1}" v-show="couopn.amount > 0">
            <div class="aui-col-xs-3">
                <div class="list-item-media">
                    <span>¥{{couopn.amount || 0}}</span>
                </div>
            </div>
            <div class="aui-col-xs-6">
                <div class="list-item-inner">
                    <div class="list-item-text">
                        {{couopn.type | promote}}
                    </div>
                    <div class="list-item-text ">
                        有效期 {{couopn.validateOn | newDate }}至{{couopn.validateEnd | newDate}}
                    </div>
                    <div class="list-item-text">
                        会员可用
                    </div>
                </div>
            </div>
            <div class="aui-col-xs-3">
                <div class="ticket">
                    <!--<span class="ticket-in">-->
                    <!--立即使用-->
                    <!--</span>-->
                </div>
            </div>
        </div>
    </div>
    <div class="loading aui-text-center" v-show="couopns.length === 0" style="text-align: center">
        <p>暂无代金券</p>
    </div>
    <div class="loading aui-text-center" v-show="loadMore.show">
        <img src="../../icon/loading.gif" width="16"/>
        <div v-text="loadMore.text"></div>
    </div>
</section>

</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/url.js"></script>
<script type="text/javascript" src="../../script/uz.js"></script>


<script type="text/javascript">
    var vm;
    apiready = function () {
        vm.init();
        api.addEventListener({
            name : 'scrolltobottom',
            extra : {
                threshold : 0 //设置距离底部多少距离时触发，默认值为0，数字类型
            }
        }, function(ret, err) {
            vm.init();
        });
    };


     vm = new Vue({
        el: '#app',
        data: {
            loadMore: {
                show: false, //控制是否显示 加载更多 默认不显示
                text: '加载更多...'
            },
            "page": 0,
            "pageSize": 10,
            codeImg: "../../image/hold.jpg",
            dueTime: dueTime,
            nowTime: new Date(),
            couopns: [],
            completed: false //是否加载了所有数据
        },
        filters: {
            newDate: function (time) {
                if (!time) return '';
                return time.substring(0, 10);
            },
            promote: function (promote) {
                if (!promote) return '';
                var newPromote = {
                    refer: "新用户优惠",
                    cashable: "推荐有奖",
                    other: "其他券"
                };
                return newPromote[promote];
            }
        },
        methods: {
            init: function () {
                var self = this;
                if (!self.completed) {//判断是否已经加载了所有数据
                    self.loadMore.show = true;
                    //显示加载更多模块
                    self.page++;
                    var url = serviceUser + 'service/coupons';
                    var headers = _getAjaxHeaders(true, true);
                    var data = _getAjaxData({
                        "page": self.page,
                        "pageSize": self.pageSize
                    });
                    var extra = null;
                    _ajaxData(url, 'post', headers, data, function (ret, extra) {
                        if (ret.statusCode === 200) {
                            if (ret.couopns && ret.couopns.length > 0) {
                                self.couopns = self.couopns.concat(ret.couopns);
                            } else {
                                self.completed = true;
                            }
                        } else if (ret.statusCode == '10104') {
                            goLogin('', "../win_regin.html");
                        } else {
                            toastMsg(ret.msg);
                        }
                        if (self.completed) {
                            self.loadMore.text = '没有数据了!';
                        }
                        self.loadMore.show = false;
                    }, function (err, extra) {
                        toastMsg(err.msg);
                        self.loadMore.show = false;
                    }, 0, extra);
                }
            }
        }
    });

</script>
</html>