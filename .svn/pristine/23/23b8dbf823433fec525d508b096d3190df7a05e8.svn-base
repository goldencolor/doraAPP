<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>新手引导</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../css/2_0/aui_2_0.css"/>
    <link rel="stylesheet" type="text/css" href="../css/2_0/rem.css"/>
    <link rel="stylesheet" type="text/css" href="../css/2_0/util.css"/>
    <link rel="stylesheet" type="text/css" href="../css/fonts/duola_iconfont2.css"/>
    <link rel="stylesheet" type="text/css" href="../css/2_0/aui_slide.css"/>
    <style>
        .skip{
            display: none;/*隐藏跳过按钮*/
            position: absolute;
            height: 2.5rem;
            line-height: 2.5rem;
            background-color: #FF3C54;
            top: 0.5rem;
            right: 0.5rem;
            color: #FFFFFF;
            z-index: 10000;
        }
        .aui-slide-page-wrap{
            bottom: 0.25rem;
        }
        .aui-slide-page-active{
            background-color: #FF3C54;
        }
        .btnBox{
            position: absolute;
            z-index: 10000;
            bottom: 1.75rem;
            width: 100%;
            height: 2.5rem;
            color: #FFFFFF;
            text-align: center;
        }
        .btnBox .clickBtn{
            font-family: SourceHanSansCN-Normal;
            font-size: 1rem;
            width: 6.1rem;
            margin: 0 1rem;
            height: 1.75rem;
            line-height: 1.75rem;
            background-color: #FF3C54;
            border-radius: 4px;
            color: #FFFFFF;
        }
        .btnBox .clickBtnLeft{
            background-color: #FFFFFF;
            color: #4A4A4A;
        }
    </style>
</head>
<body>
    <div id="mainContent">
        <div class="aui-slide-wrap">
            <div class="aui-slide-node bg-dark">
                <img src="../image/app-slide1.jpg" width="100%"/>
                <div class="skip" tapmode onclick="closeGuide('跳过1')">跳过</div>
            </div>
            <div class="aui-slide-node bg-dark">
                <img src="../image/app-slide2.jpg" width="100%"/>
                <div class="skip" tapmode onclick="closeGuide('跳过2')">跳过</div>
            </div>
            <div class="aui-slide-node bg-dark">
                <img src="../image/app-slide3.jpg" width="100%"/>
                <div class="btnBox flex flex-center">
                    <div class="clickBtn clickBtnLeft" tapmode onclick="closeGuide('随便逛逛')">随便逛逛</div>
                    <div class="clickBtn" tapmode onclick="goRegIn('立即注册')">注册/登录</div>
                </div>
                <div class="skip" tapmode onclick="closeGuide('跳过3')">跳过</div>
            </div>
        </div>
        <div class="aui-slide-page-wrap"><!--分页容器--></div>
    </div>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/uz.js"></script>
<script type="text/javascript" src="../script/aui_slide.js"></script>
<script type="text/javascript" src="../script/umeng_sdk.js"></script>
<script>


    apiready=function(){
        new auiSlide({
            container: document.getElementById("mainContent"),
            "height": api.winHeight,
            "speed": 500,
            "distance": 20,//触发滑动事件水平距离
            "loop": false,
            "pageShow": true,
            "pageStyle": 'dot',
            'dotPosition': 'center'
        });
        api.parseTapmode();
        if(api.systemType == 'android'){
            api.addEventListener({
                name: 'keyback'
            },function(ret,err){
                closeApp();
            });
        }
    };

    //关闭引导回到首页
    function closeGuide(source){
        sendEventUmeng(CONSTANT.UMENGEVENT.BTN_APP,{
            btn:source
        });
        api.setPrefs({
            key: 'watchGuide',
            value: "yes"
        });
        api.execScript({
            name:"root",
            script: "initRoot();"
        });
        setTimeout(function(){
            api.closeWin();
        },500);
    }

    //测试
    function test(){
        new auiSlide({
            container: document.getElementById("mainContent"),
            "height": 667,
            "speed": 1000,
            "distance": 20,//触发滑动事件水平距离
            "loop": false,
            "pageShow": true,
            "pageStyle": 'dot',
            'dotPosition': 'center'
        });
    }

    //立即登录注册
    function goRegIn(source){
        api.setPrefs({
            key: 'watchGuide',
            value: "yes"
        });
        sendEventUmeng(CONSTANT.UMENGEVENT.BTN_APP,{
            btn:source
        });
        goLogin();
    }
</script>
</body>
</html>