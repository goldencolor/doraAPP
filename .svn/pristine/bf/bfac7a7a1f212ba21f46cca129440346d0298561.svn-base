<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>用户修改密码</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/2_0/aui_2_0.css" />
    <link rel="stylesheet" type="text/css" href="../../css/2_0/rem.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/2_0/util.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/fonts/duola_iconfont2.css"/>
    <script type="text/javascript" src="../../script/vue/vue.min.js"></script>
</head>
<body>
<div id="app">
    <div class="aui-content aui-margin-b-15">
        <ul class="aui-list aui-form-list">
            <li class="aui-list-item">
                <div class="aui-list-item-inner">
                    <div class="aui-list-item-label">
                        电话号码
                    </div>
                    <div class="aui-list-item-input">
                        <input type="number" placeholder="电话号码" v-model="phone">
                    </div>
                </div>
            </li>
            <li class="aui-list-item">
                <div class="aui-list-item-inner">
                    <div class="aui-list-item-label">
                        验证码
                    </div>
                    <div class="aui-list-item-input">
                        <input type="number" placeholder="验证码" v-model="code" >
                    </div>
                </div>
            </li>
            <li class="aui-list-item">
                <div class="aui-list-item-inner">
                    <div class="aui-list-item-label">
                        密码
                    </div>
                    <div class="aui-list-item-input">
                        <input type="password" placeholder="密码" v-model="pwd">
                    </div>
                </div>
            </li>
            <li class="aui-list-item">
                <div class="aui-list-item-inner">
                    <div class="aui-list-item-label">
                        确认密码
                    </div>
                    <div class="aui-list-item-input">
                        <input type="password" placeholder="再次输入密码" v-model="pwd2">
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div class="my-btn-box" style="padding: 0.7rem 0.7rem 0rem 0.7rem ">
        <div class="aui-btn my-btn-default aui-btn-block"
             style="color:#FFFFFF;background-color:#FF3C54;" @click="getCode">获取验证码</div>
    </div>
    <div class="my-btn-box" style="padding: 0.7rem 0.7rem 0rem 0.7rem">
        <div class="aui-btn my-btn-default aui-btn-block"
             style="color:#FFFFFF;background-color:#FF3C54;" @click="resetPwd">确定修改</div>
    </div>


</div>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/url.js"></script>
<script type="text/javascript" src="../../script/uz.js"></script>
<script type="text/javascript" src="../../script/pingpp.js"></script>
<script>
    var vm = null;
    apiready= function () {
        vm = new Vue({
            el: '#app',
            data: {
                phone: '18328677068',
                code: '',
                pwd: '',
                pwd2: ''

            },
            filters: {

            },
            methods: {
                getCode:function () {
                    var self = this;
                    if (!!!self.phone || (self.phone+'').length !== 11){
                        toastMsg("请正确输入电话号码");
                        return;
                    }
                },
                resetPwd:function () {
                    var self = this;
                    if (!!!self.phone || (self.phone+'').length !== 11){
                        toastMsg("请正确输入电话号码");
                        return;
                    }
                    if (!!!self.code || (self.code+'').length !== 4){
                        toastMsg("请正确输入验证码");
                        return;
                    }
                    if (!!!self.pwd || self.pwd.length < 6){
                        toastMsg("请正确输入密码");
                        return;
                    }
                    if (!!!self.pwd2 || self.pwd2.length < 6){
                        toastMsg("请正确输入密码");
                        return;
                    }
                    if (self.pwd !== self.pwd2){
                        toastMsg("两次输入密码不一致");
                        return;
                    }
                }

            }
        })
    }

</script>

</body>
</html>