    <style>
        /*时间轴*/
        .line-wrap{
            background: #FF3C54;
        }
        .line-container{
            padding: 2rem 0 1.7rem 0;
        }
        .dot{
            width: 0.6rem;
            height: 0.6rem;
            background: #fff;
            border-radius: 100%;
            position: relative;
            z-index: 3;
        }
        .dot.active{
            background: #ffffff;
        }
        .bg-dot{
            position: absolute;
            top:-0.3rem;
            left: 50%;
            margin-left: -0.6rem;
            width: 1.2rem;
            height: 1.2rem;
            border-radius: 100%;
            opacity: 0.5;
            background: #FFFFFF;
            z-index: 2;
        }
        .line-item{
            position: relative;
        }
        .line-item:not(:last-child):after {
            content: '';
            position: absolute;
            top: 0.25rem;
            left: 50%;
            width: 100%;
            height: 0.1rem;
            background: #fff;
            z-index: 1;
        }
        .line-item.active:after{
            background: #ffffff;
        }

        .triangle-up {
            width:0;
            height:0;
            border-left:0.4rem solid transparent;
            border-right:0.4rem solid transparent;
            border-bottom:0.4rem solid #ffffff;
        }
        .text-container{
            font-family: SourceHanSansCN-Normal;
            font-size: 0.7rem;
            color: #FFFFFF;
            padding-bottom: 1rem;
        }
        .text-container div{
            opacity: 0.6;
        }
        .text-container .active{
            color: white;
            opacity: 1;
        }

        /*中间部分*/
        .body-item{
            height: 5rem;
            padding-left: 1rem;
        }
        .item-label{
            font-family: SourceHanSansCN-Normal;
            font-size: 0.7rem;
            color: #8B8B8B;
            padding-left: 0.3rem;
        }
        .body-item .money{
            margin-top: 0.4rem;
        }
        .body-section{
            padding: 2.8rem 1rem 0 1rem;
            min-height: 11rem;
            font-family: SourceHanSansCN-Normal;
        }
        .body-border{
            border-bottom: 1px solid #E6E6E6;
        }
        .body-section .title{
            font-size: 1rem;
            color: #000000;
            margin-bottom: 0.9rem;
            font-weight: bold;
        }
        .body-section .sub-title{
            font-size: 0.7rem;
            color: #4A4A4A;
        }

        .money{
            font-family: ArialMT;
            font-size: 1.5rem;
            color: #313131;
            line-height: 1.5rem;
            margin-top: 0.5rem;
            font-weight: bold;
        }
        .moeny-desc{
            font-family: SourceHanSansCN-Normal;
            font-size: 1rem;
            color: #313131;
            line-height: 1rem;
        }
        /*尾部部分*/
        .footer-section{
            padding: 0.6rem 1rem 0 1rem;
            font-family: SourceHanSansCN-Normal;
            font-size: 0.7rem;
            color: #8B8B8B;
            line-height: 1.2rem;
        }
        /*尾部按钮*/
        .footer-btn{
            background: #D8D8D8;
            border-radius: 0.2rem;
            font-family: SourceHanSansCN-Normal;
            font-size: 1rem;
            color: #FFFFFF;
            margin: 3.5rem 1rem 0 1rem;
            height: 2.5rem;
        }
        .hit-bg{
            background: #FF3C54;
        }
    </style>
</head>
