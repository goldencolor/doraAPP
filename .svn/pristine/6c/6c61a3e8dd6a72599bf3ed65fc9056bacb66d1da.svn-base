    //点击返回图标异步执行关闭窗口
    function execCloseSlefWin(extra,winName,value){
        api.closeWin({
            name: winName
        });
    }

    function wx_login() {
//        api.showProgress({
//            style: 'default',
//            animationType: 'fade',
//            title: '微信授权中',
//            text: '请稍候',
//            modal: false
//        });
        wx.auth({
            apiKey : CONSTANT.WEIXINAPPKEY
        }, function(ret, err) {
            _loadingHide();
            if (ret.status) {
                getWxToken(ret.code);
            } else {
                console.log(JSON.stringify(err));
                var msg = '未知错误';
                if(err.code == 1){
                    msg = '授权失败,你取消了授权';
                }else if(err.code == 2){
                    msg = '授权失败,你拒绝了授权';
                }else if(err.code == 3){
                    msg = '手机未安装微信';
                }
                toastMsg(msg);
            }
        });
    }

    function getWxToken(code) {
        wx.getToken({
            apiKey : CONSTANT.WEIXINAPPKEY,
            apiSecret : CONSTANT.WEIXINAPPSECRET,
            code : code
        }, function(ret, err) {
            if (ret.status) {
                getUserInfo(ret.accessToken, ret.openId);
            } else {
                console.log(JSON.stringify(err));
                var msg = '未知错误';
                if(err.code == 1 || err.code == 2 || err.code == 3){
                    msg = '服务器忙,请稍后重试';
                }else if(err.code == 4){
                    msg = '网络超时,请重试';
                }
                toastMsg(msg);
            }
        });
    }

    function getUserInfo(accessToken, openId) {
        wx.getUserInfo({
            accessToken : accessToken,
            openId : openId
        }, function(ret, err) {
            if (ret.status) {
                toastMsg('微信登录成功');
                wechat(ret);
                $api.setStorage('wxOpenId', openId);
            } else {
                console.log(JSON.stringify(err));
                var msg = '未知错误';
                if(err.code == 1 || err.code == 2 || err.code == 3
                    || err.code == 4 || err.code == 5){
                    msg = '获取微信数据失败,请稍后重试';
                }else if(err.code == 4){
                    msg = '网络超时,请重试';
                }
                toastMsg(msg);
            }
        });
    }

    function refreshToken() {
        wx.refreshToken({
            apiKey : CONSTANT.WEIXINAPPKEY,
            apiSecret : CONSTANT.WEIXINAPPSECRET,
        }, function(ret, err) {
            if (ret.status) {
                getUserInfo(ret.dynamicToken, ret.openId);
            } else {
                toastMsg(err.code);
            }
        })
    }

    function wechatSuccessCallback(ret,extra){
