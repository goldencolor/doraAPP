                var vipType = '月费会员';
            }
            if (isMember == 'activity') {
                var vipType = '活动会员';
            }
            if (isMember == 'annual') {
                var vipType = '年费会员';
            }
            umengLogin(ret.data.id,'wechat');

            $api.setStorage('userVersion', ret.data.user.secfile.version);
            //用户选择的版本
            $api.setStorage('id', ret.data.id);
            $api.setStorage('betaUser', ret.data.user.betaUser);
