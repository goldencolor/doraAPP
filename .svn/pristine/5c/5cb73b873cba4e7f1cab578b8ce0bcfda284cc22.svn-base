					}else{
						$api.setStorage('userHead', imgHeaderUrl);
					}
				}
				//用户头像
				//					$api.setStorage('userInviteCode',ret.data.user.secfile.inviteCode); //用户的邀请码
				setTimeout(function() {
					closeWindow();
					api.execScript({
						name : 'root',
						frameName : "footer_tab_4",
						script : 'init();'
					});
