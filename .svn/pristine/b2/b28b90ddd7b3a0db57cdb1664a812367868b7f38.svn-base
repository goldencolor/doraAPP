<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport"
          content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>用户设置密码</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/2_0/rem.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/2_0/util.css"/>
    <style>
        .main-container {
            padding: 1rem 1.25rem 0 1.25rem;
        }

        .input-container {
            margin-top: 0.75rem;
            font-family: SourceHanSansCN-Normal;
            font-size: 0.8rem;
            color: #454545;
            height: 2.25rem;
        }

        .input-container label {
            min-width: 3.2rem;
        }

        input {
            -webkit-appearance: none;

        }
        input:hover{
            outline-color:#FF3C54 ;
        }

        .input-container input {
            border: 1px solid #D8D8D8;
            border-radius: 2px;
            margin-left: 0.75rem;
            font-family: ArialMT;
            font-size: 0.8rem;
            color: #4A4A4A;
            display: block;
            height: 0.8rem;
            line-height: 0.8rem;
            padding: 0.7rem 0 0.6rem 0.5rem;
        }

        .input-container input::-webkit-input-placeholder {
            font-size: 0.82rem;
            color: #BBBBBB;
        }

        #input-code {
            width: 7.75rem;
        }

        #sendCodeBtn {
            width: 3.75rem;
            height: 2.25rem;
            line-height: 2.25rem;
            text-align: center;
            margin-left: 0.75rem;
            background: #D8D8D8;
            border-radius: 2px;
            font-family: SourceHanSansCN-Normal;
            font-size: 0.7rem;
            color: #FFFFFF;
        }

        #pdSubBtn {
            width: 100%;
            height: 2.5rem;
            border-radius: 2px;
            background: #454545;
            border-radius: 2px;
            font-family: SourceHanSansCN-Normal;
            font-size: 0.9rem;
            color: #FFFFFF;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
<div class="main-container">
    <div class="input-container flex flex-center">
        <label>手机号</label>
        <input id="phone" onblur="isVaildPhone(this)" oninput="isVaildPhone(this)" class="flex-1" type="tel"
               placeholder="请输入手机号"/>
    </div>
    <div class="input-container flex flex-center">
        <label>验证码</label>
        <input id="input-code" onblur="isVaildPd()" oninput="isVaildPd()" class="flex-1" type="tel"
               placeholder="请输入验证码"/>

        <div id="sendCodeBtn" tapmode onclick="sendCode(this)">发送验证</div>
    </div>
    <div class="input-container flex flex-center">
        <label>密码</label>
        <input id="input-pd" oninput="isVaildPd()" class="flex-1" type="password" placeholder="请输入密码"/>
    </div>
    <div class="input-container flex flex-center">
        <label>确认密码</label>
        <input id="input-repd" oninput="isVaildPd()" class="flex-1" type="password" placeholder="请确认密码"/>
    </div>
    <input id="pdSubBtn" type="button" tapmode onclick="pdSubmit(this)" value="确定">
</div>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/url.js"></script>
<script type="text/javascript" src="../../script/sha_256.js"></script>
<script type="text/javascript" src="../../script/md5.js"></script>
<script type="text/javascript" src="../../script/uz.js"></script>

<script>
    var wait = 60;//倒计时
    var sendCodeBtnEl = null;//发送验证码按钮
    var pdSubBtnEl = null;//确定按钮
    apiready = function () {
        sendCodeBtnEl = $api.byId('sendCodeBtn');
        pdSubBtnEl = $api.byId('pdSubBtn');
        var phoneEl = $api.byId('phone');
        var phone = $api.getStorage('userPhone') || '';
        if (phone) {
            $api.val(phoneEl, phone);
            isVaildPhone(phoneEl);
        }
        api.parseTapmode();
    }

    //验证输入手机号是否有效
    function isVaildPhone(el) {
        var reg = /^1[34578]\d{9}$/;
        if (reg.test(el.value)) {
            $api.css(sendCodeBtnEl, 'background:#FF3C54');
        } else {
            $api.css(sendCodeBtnEl, 'background:#D8D8D8');
        }
    }

    //验证密码是否有效
    function isVaildPd() {
        var pd = $api.val($api.byId('input-pd')).trim();
        var repd = $api.val($api.byId('input-repd')).trim();
        var phone = $api.val($api.byId('phone')).trim();
        var code = $api.val($api.byId('input-code')).trim();
        var reg = /^1[34578]\d{9}$/;
        if (pd && repd && pd === repd && reg.test(phone) && code) {
            $api.css(pdSubBtnEl, 'background:#FF3C54');
        } else {
            $api.css(pdSubBtnEl, 'background:#454545');
        }
    }

    //点击发送验证码
    function sendCode(el) {
        var phone = $api.val($api.byId('phone')).trim();
        var reg = /^1[34578]\d{9}$/;
        if (!reg.test(phone)) {
            api.toast({
                msg: '请输入正确的11位手机号',
                duration: 3000,
                location: 'bottom'
            });
        } else if (wait != 60) {
        } else {
            api.showProgress({
                style: 'default',
                animationType: 'fade',
                title: '正在发送验证码',
                text: '请稍候',
                modal: true
            });
            sendMsg(phone);
        }
    }

    function sendMsgErrorCallback(err, extra) {
        _loadingHide();
        toastMsg(err.msg);
    }

    function sendMsgSuccessCallback(ret, extra) {
        _loadingHide();
        if (ret.statusCode == '200') {
            time(sendCodeBtnEl);
        } else {
            toastMsg(ret.msg);
        }
    }

    //请求发送验证码
    function sendMsg(phone) {
        var str = md5_vm_test('appkey=37e08411ef0e84597e073c53c2c7fe5d&mobile=' + phone + '&url=/app/user/mobile/bind');
        var url = serviceUser + 'mobile/verify/create';
        var headers = _getAjaxHeaders(false, true);
        var data = _getAjaxData({
            sendToBound: true,
            mobile: String(phone),
            sign: str,
            url: '/app/user/mobile/bind'
        });
        var extra = null;
        _ajaxData(url, 'post', headers, data, sendMsgSuccessCallback, sendMsgErrorCallback, 0, extra);
    }


    function verifyErrorCallback(err, extra) {
        _loadingHide();
        toastMsg(err.msg);
    }

    //点击确定按钮
    function pdSubmit(el) {
        var phoneEl = $api.byId('phone');
        var inputCodeEl = $api.byId('input-code');
        var inputPdEl = $api.byId('input-pd');
        var inputRepdEl = $api.byId('input-repd');
        var phone = $api.val(phoneEl).trim();
        var code = $api.val(inputCodeEl).trim();
        var pd = $api.val(inputPdEl).trim();
        var repd = $api.val(inputRepdEl).trim();
        var reg = /^1[34578]\d{9}$/;
        if (!reg.test(phone)) {
            toastMsg('请输入正确的11位手机号');
            return;
        }
        if (!code) {
            toastMsg('请输入验证码');
            return;
        }
        if (!pd) {
            toastMsg('请输入密码');
            return;
        }
        if (!repd) {
            toastMsg('请确认密码');
            return;
        }
        if (pd != repd) {
            toastMsg('两次密码不一致!');
            return;
        }
        //关闭键盘
        phoneEl.blur();
        inputCodeEl.blur();
        inputPdEl.blur();
        inputRepdEl.blur();
//        console.log(getLogStr([phone,code,pd,repd]));
        //先请求验证验证码
        //再设置密码
        _loadingShow();
        var str = md5_vm_test('appkey=37e08411ef0e84597e073c53c2c7fe5d&mobile=' + phone + '&url=/app/user/mobile/bind');
        var url = serviceUser + 'mobile/verify';
        var headers = _getAjaxHeaders(false, true);
        var data = _getAjaxData({
            mobile: phone, // 手机号
            veriCode: code, // 短信验证码
            sign: str
        });
        var extra = null;
        _ajaxData(url, 'post', headers, data, function (ret) {
            if (ret.statusCode == '200') {
                var url2 = serviceUser + 'settings/password/retrieve';
                var headers2 = _getAjaxHeaders(false, true);
                var data2 = _getAjaxData({
                    mobile: phone, // 手机号
                    authKey: ret.authKey, // 短信凭证
                    newPassword: {digest: sha256_vm_test(repd)}//密码
                });
                _ajaxData(url2, 'post', headers2, data2, function (ret) {
                    _loadingHide();
                    if (ret.statusCode == '200') {
                        openDialogAlert({
                            texts: {
                                content: '你的密码已设置，请重新登录',
                                leftBtnTitle: '我知道啦'
                            },
                            styles: {
                                bg: '#F8F8F8',
                                w: 325,
                                corner: 4,
                                content: {
                                    marginT: 50,
                                    marginB: 50,
                                    color: '#4A4A4A',
                                    size: 16
                                },
                                left: {
                                    marginB: 0,
                                    marginL: 0,
                                    w: 325,
                                    h: 50,
                                    corner: 4,
                                    bg: '#FFFFFF',
                                    color: '#FF3C54',
                                    size: 18
                                }
                            }
                        }, function (ret) {
                            if (ret.eventType == 'left') {
//                                goLogin(null,'../win_regin.html');
                                $api.clearStorage();
                                api.sendEvent({
                                    name: 'loginOut'
                                });
                                setTimeout(function () {
                                    api.closeToWin({
                                        name: 'root',
                                        animation: {
                                            type: "none"
                                        }
                                    });
                                    api.execScript({
                                        name: 'root',
                                        script: 'execGoIndex();'
                                    });
                                }, 100);
                            }
                        });
                    } else {
                        toastMsg(ret.msg);
                    }
                }, verifyErrorCallback, 0);
            } else {
                _loadingHide();
                toastMsg(ret.msg);
            }
        }, verifyErrorCallback, 0, extra);
    }

    //倒计时
    function time(o) {
        if (wait == 0) {
            $api.css(o, 'background:#FF3C54');
            o.innerText = '发送验证';
            wait = 60;
        } else {
            $api.css(o, 'background:#D8D8D8');
            o.innerText = wait + '秒';
            wait--;
            setTimeout(function () {
                time(o)
            }, 1000);
        }
    }
</script>
</body>
</html>