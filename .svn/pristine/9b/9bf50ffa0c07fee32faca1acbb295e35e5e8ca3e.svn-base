	}
	//异步切换footer
	function execGoFooter(index){
		api.execScript({
			frameName: 'footer',
			script: 'execSwitchFooter("'+index+'");'
		});
		execSwitchFooter(index);
	}

	//打开在线客服
	function openMeChats() {
		sendEventUmeng(CONSTANT.UMENGEVENT.ONLINE_SERVICE, {
			from: '首页'
		});
		openChat();
		api.sendEvent({
			name: 'clearMqCountIndex'
