	//把frame1Header中折叠的头部展开
	function showFrame1AllHeader(){
//		console.log(getLogStr(['showFrame1AllHeader',isOpenFrame1Header]));
		isOpenFrame1Header = 'all';
	}

	function otherInit(extra) {
		//监听应用从后台回到前台
		api.addEventListener({
			name: 'resume'
		}, function (ret, err) {
			api.bringFrameToFront({
				from: 'closet_frame',
				to: 'footer_tab_3'
			});
		});
		//监听跳转登录页面
		api.addEventListener({
			name: 'goLogin'
		}, function (ret, err) {
			goLogin(CONSTANT.INDEX);
		});
		api.addEventListener({
			name: 'clearMqCountUser'
		}, function (ret, err) {
			clearMqCount();
		});
		//监听用户退出广播事件,切换到footer0
		api.addEventListener({
			name: 'loginOut'
		}, function (ret, err) {
			execGoIndex();
		});

		messagesCount = $api.getStorage('messagesCount') || 0;
		messages();
		var tab = new auiTab({
			element: document.getElementById("tab"),
			index: 1,
			repeatClick: false
		}, function (ret) {
			api.sendEvent({
				name: 'tabClothList',
				extra: {
					key: ret.index
				}
			});
		});
	}

	function openFrameGroup(){
		api.openFrameGroup({
			name: 'footer_tab',
			scrollEnabled: false,
			rect: {
				x: 0,
				y: headerHeight,
				w: 'auto',
				h: 'auto'
			},
			index: 0,
			preload: 0,
			frames: [
				{
					name: 'footer_tab_1',
					url: 'html/frame0_new.html',
					bounces: true,
					vScrollBarEnabled: false
				},
				{
					name: 'footer_tab_2',
					url: 'html/frame1_new.html',
					bounces: true,
					vScrollBarEnabled: true,
					pageParam: {
						headerHeight: headerHeight
					}
				},
				{
					name: 'footer_tab_3',
					url: 'html/closet/closet.html',
					bounces: false,
					vScrollBarEnabled: false
				},
				{
					name: 'footer_tab_4',
					url: 'html/user/user.html',
					bounces: false,
					vScrollBarEnabled: false
				},
				{
					name: 'footer_tab_5',
					url: 'html/frame4_new.html',
					bounces: true,
					vScrollBarEnabled: true
				}
			]
		}, function (ret, err) {
			indexUmeng(ret.index);
			sendEventUmeng(CONSTANT.UMENGEVENT.FOOTER_TAB, {
				index: ret.index,
				name: CONSTANT.PAGE.INDEX[ret.index]
			});
			preIndex = ret.index;

			//测试新手引导，每次进入首先清空guideKey的缓存;
//			api.removePrefs({
//				key: 'guideKey'
//			});
			openGuide(ret.index);
		});

		//打开底部导航
		var footerHeight = 2.8 * parseInt($api.cssVal($api.dom('html'),'font-size'));
		api.openFrame({
			name: 'footer',
			url: 'html/footer.html',
			rect: {
				x: 0,
				y: Math.ceil(api.winHeight - footerHeight),
				w: 'auto',
				h: footerHeight
			},
			bounces: false,
			vScrollBarEnabled: false,
			hScrollBarEnabled: false
		});
	}

	function openGuide(index){
		var guideValue =  api.getPrefs({
					sync: true,
					key: 'guideKey'
				}) || {};
		guideValue = typeof (guideValue)=='string' ? JSON.parse(guideValue) : guideValue;
		if(index!=4){
			if(index==0 && !isDefine(guideValue.one)){
				guideSwitch(index);
				guideValue.one='yes';
			}
			if(index==1 && !isDefine(guideValue.two)){
				guideSwitch(index);
				guideValue.two='yes';
			}
//			if(index==2 && !isDefine(guideValue.three)){
//				guideSwitch(index);
//				guideValue.three='yes';
//			}
			if(index==3 && !isDefine(guideValue.four)){
//				guideSwitch(index);
//				guideValue.four='yes';
			}
			api.setPrefs({
				key: 'guideKey',
				value: guideValue
			});
		}

//		api.setFrameGroupAttr({
//			name: 'footer_tab',
//			rect: {
//				x: 0,
//				y: index == "3" ? 0 :headerHeight,
//				w: 'auto',
//				h: 'auto'
//			}
//		});
	}

	//打开新手引导页
	function guideSwitch(index){
		api.openFrame({
			name: 'new_user_guide',
			url: 'html/new_user_guide.html',
			rect: {
				x: 0,
				y: 0,
				w: 'auto',
				h: 'auto'
			},
			pageParam: {
				guideIndex:index
			},
			bounces: false,
			vScrollBarEnabled: false,
			hScrollBarEnabled: false
		});
		setTimeout(function(){
			api.bringFrameToFront({
				from: 'new_user_guide'
			});
		},300);
	}

	//统计frameGroup友盟页面数据
	function indexUmeng(index) {
		onPageStartUmeng(CONSTANT.PAGE.INDEX[index]);
		if (!isNaN(preIndex)) {
			onPageEndUmeng(CONSTANT.PAGE.INDEX[preIndex]);
		}
		listenPageEndUmeng(CONSTANT.PAGE.INDEX[index]);
	}
	function openUser() {
		api.openFrame({
			name: 'footer_tab_4',
			url: 'html/user/user.html',
			bounces: false,
			rect: {
				x: 0,
				y: 0,
				w: 'auto',
				h: api.winHeight - (2.8 * CONSTANT.REM - 2)
			},
			vScrollBarEnabled:false,
			hScrollBarEnabled:false
		});
	}
	//异步切换footer
	function execSwitchFooter(index){
		currIndex = index;
		showFrameHeader(index);
//		if(preIndex == 1){
			//从云衣橱footer切换到其他的footer
			if(isOpenFrame1Header){
				api.setFrameAttr({
					name: 'frame1Header',
					rect: {
						x: 0,
						y: 0,
						w: 'auto',
						h: headerHeight
					},
					hidden: true
				});
				api.execScript({
					frameName:'frame1Header',
					script:'execHackShowShortHeader();'
				});
			}
//		}
		if(preIndex == 2){
			//从我的衣橱footer切换到其他的footer
			api.execScript({
				name: 'root',
				frameName: "closet_frame",
				script: "closeMyBag();"
			});
			api.setFrameAttr({
				name: 'closet_frame',
				hidden: true
			});
		}

		if(index == 0){
			messages();
		}else if(index == 1){
			if(isOpenFrame1Header){
				showFrame1Header();
			}
		}else if(index == 2){
			//当footer_tab_3未打开时候会报错
			api.execScript({
				name: 'root',
				frameName: "footer_tab_3",
				script: "openFrame();"
			});
		}else if(index == 3){
			//当footer_tab_4未打开时候会报错
//			api.execScript({
//				frameName: "footer_tab_4",
//				script: 'updateMessages("' + messagesCount + '");'
//			});
			openUser();
			return;
		}else if(index == 4){

		}
		api.setFrameAttr({
			name: 'footer_tab_4',
			hidden: true
		});
		api.setFrameGroupIndex({
			scroll: false,
			name: 'footer_tab',
			index: index
		});
	}

	//显示Frame的header
	function showFrameHeader(index) {
		var preHeaderEl = $api.byId('header'+preIndex);
		if(preHeaderEl){
			$api.addCls(preHeaderEl,'hide');
		}
		var headerEl = $api.byId('header'+index);
		if(headerEl){
			$api.removeCls(headerEl,'hide');
			$api.fixStatusBar(headerEl);
//			console.log($api.offset(headerEl).h);
		}
	}



