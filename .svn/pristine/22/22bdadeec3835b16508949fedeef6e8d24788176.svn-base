<script type="text/javascript">
    var clothesId;
    var numStar = 5;
    var imgId = 0;
    var frameData = null;
    var isStar = false;
    apiready = function () {
        frameData = api.pageParam.data;
        clothesId = frameData.id ? frameData.id : '';
//        console.log('-----------衣服ID-----------');
